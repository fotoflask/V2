<!DOCTYPE html>
<html>
    <head>
        <title>Home Page</title>
        <meta charset="utf-8">
		  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		  <link rel="stylesheet" href="css/homepage.css">
      <link rel="stylesheet" href="css/navbar.css">
      <link rel="stylesheet" href="css/popup.css">
      <link rel="stylesheet" href="css/loadinganimation1.css">
		<meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Livvic:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,900&display=swap" rel="stylesheet">

    </head>
    <body>
        
      <%- include("layout/loadinganimation2") %>        
      <%- include("layout/navbar",{username:log_username,result : result}) %>
      <%- include("layout/uploadpost",{profilename:log_username,profilepic: ""}) %>

        <hr>

        <div class = "row media-section">
            
            <div class="col-lg-9 col-12 homepage-post">

                    <%for(let i=0; i< postnumber;i++){ %>
                    <div class="post col-11 ">
                        <div class="post-details">                            
                            <h5 class="user-name"><a class="profile-link" id="profile-link" href="/profilepage/<%=encodeURIComponent(post_username[i])%>" ><img class="profile-pic-small"src=<%= profilepic[i] %> ><%=post_username[i] %></a></h5>
                            <div class="postpage"></div>
                        </div>
                        <div class="imageHolder">
                          <a href="/postpage/<%= log_username %>"><img class="imageItself" src=<%= imagesrc[i] %> /></a>
                        </div>
                        <!-- <div class="image-box"><img  class="img-fluid " alt="" ></div> -->
                        <div class="post-options row">
                            <div class="col-3 like" 
                                onclick="if (this.querySelector('img').src.endsWith('icons8-ok-hand-50.png')) {
                                    this.querySelector('img').src = '/images/otherassets/icons8-ok-hand-50 (1).png';
                                    this.querySelector('p').innerHTML = parseInt(this.querySelector('p').innerHTML)+1;}
                                    else {
                                        this.querySelector('img').src = '/images/otherassets/icons8-ok-hand-50.png';  
                                        this.querySelector('p').innerHTML = parseInt(this.querySelector('p').innerHTML)-1;
                                    }">
                                <img src="/images/otherassets/icons8-ok-hand-50.png"  >
                                <p><%= likes[i] %></p>
                            </div>
                            <div class="col-3 comment">
                                <img src="/images/otherassets/icons8-comments-50.png">        
                            </div>
                        </div>
                    </div>
                    <% } %>         
            </div>
            <div class="col-3 new-panel">
                <p>notification-panel</p>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <script src="https://kit.fontawesome.com/5e315e4af1.js" crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.6.3.js" integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM=" crossorigin="anonymous"></script>
        <script src="/js/homepage.js"></script>
        <script src="/js/popup.js"></script>

        <script>
            $.holdReady(true);
        setTimeout(function () {
  
            // Setting a variable until
            // document.ready is called
            const myVar = "GFG";
            $.holdReady(false);
        }, 2000);
         $(document).ready(()=> {
            //Preloader
            preloaderFadeOutTime = 500;
            function hidePreloader() {
            var preloader = $('.cube-wrapper');
            preloader.fadeOut(preloaderFadeOutTime);
            }
            hidePreloader();
            });
          </script>
        
    </body>
</html>