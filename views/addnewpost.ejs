<!DOCTYPE html>
<html>
    <head>
     <title>Fotoflask</title>
     <link rel="stylesheet" href="css/addnewpost.css">
     <link rel="stylesheet" href="/css/navbar.css">
     <link rel="stylesheet" href="/css/loadinganimation1.css">
     <link rel="stylesheet" href="/css/leftsidebar.css">
		<meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <link href="https://fonts.googleapis.com/css2?family=Livvic:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,900&display=swap" rel="stylesheet">
    </head>
    <body>

        
        <%- include("layout/loadinganimation2") %> 
        <%- include("layout/navbar",{user_logged}) %>
        
        <%- include("layout/bottomnavbar") %>

        <div class="container style-1">
        <%- include("layout/leftsidebar") %>

            
            <div class="feedcontainer style-1">

                <div class="front style-1">

                    <div class="feed style-1">

                        <div class="head">

                        <div class="profilepic3_details">
                            
                            <img class="profilepic" src="images/ProfilePhotos/<%= usr.dprofilepic%>"  onerror="this.onerror=null; this.src='/images/OtherAssets/pngwing.com (2).png'; style='object-fit:scale-down;'">

                            <div class="details">

                                <div>
                                    <div><%=usr.dprofilename %></div>
                                    <small><%=usr.dusername %></small>
                                </div>
        
        
                            </div>

                        
                        </div>
                        

                        <div class="trpiledots">

                            <span><i class="bi bi-three-dots"></i></span>

                        </div>


                        </div>


                        <div class="photo">

                            <img id="display-pic" src="images/OtherAssets/blankimage.png">



                        </div>


                        <div class="icons">

                        <div class="mainicons">

                            <span><i class="bi bi-heart"></i></span>
                            <span><i class="bi bi-chat-dots"></i></span>
                            <span><i class="bi bi-share"></i></span>
                            
                        </div>
                        
                        <div class="bookmarkicon">

                            <span><i class="bi bi-bookmark"></i></span>

                        </div>
                        


                        </div>

                        <div class="caption">
                    
                            <p>
                                <b><%=usr.dusername %></b>     <div class="description-box"> Description </div>
                            </p>
                
                
                            <h5>TAGS :</h5> <div class="card-holder-name">.................</div>
                

                        </div>

                    </div>
                    
                </div>

                <div class="back style-1">
                    <div class="backfeed">
                        <div class="card-holder-name1">.................</div>
                        <h1>FOTO FLASK</h1>
                        <h3>.............NEW POST LOADING..........</h3>
                    </div>
                    
                </div>

            </div>








            <form method="post" action="/singlepost" enctype="multipart/form-data">


            <input required type="file" name="single_input" id="inputt" accept="image/jpeg, image/png, image/jpg" class="form-control myinput" >
                
        
                



                <div class="inputBox remove_phone">
                    <span>User Name</span>
                    <input type="text" name="username" class="" value="<%= usr.dusername %>" readonly>
                </div>
                <div class="inputBox remove_phone">
                    <span>Date</span>
                    <input type="text" name="date" class="" value="<%= String((new Date())).slice(3, 15) %>" readonly>
                </div>

                <label id='labell' for="inputt" class="submit-btn">UPLOAD PHOTO</label>
                

                <div class="inputBox">
                    <span>Description</span>
                    <input type="text" class="card-number-input"  name="description" placeholder="Enter Post Description" >
                </div>
                <div class="inputBox">
                        <span>Tag</span>
                        <input type="text"  name="tag" placeholder="Enter a Tag" class="cvv-input" >
                    </div>
                    
            
            <button type="submit" class="submit-btn" onsubmit="submitcheck">ADD NEW POST</button>

            </form>



        </div>    
        <script>
            let profilePic = document.getElementById("display-pic");
                let inputFile = document.getElementById("inputt");

                inputFile.onchange = function(){
                    profilePic.src=URL.createObjectURL(inputFile.files[0]);
                }

            document.querySelector('.card-number-input').oninput = () =>{
                document.querySelector('.description-box').innerText = document.querySelector('.card-number-input').value;
            }

            document.querySelector('.cvv-input').oninput = () =>{
                document.querySelector('.card-holder-name').innerText = "#"+document.querySelector('.cvv-input').value;
                document.querySelector('.card-holder-name1').innerText = "#"+document.querySelector('.cvv-input').value; }


            document.querySelector('.cvv-input').onmouseenter = () =>{
                document.querySelector('.front').style.transform = 'perspective(1000px) rotateY(-180deg)';
                document.querySelector('.front').style.display = "hidden";
                document.querySelector('.back').style.transform = 'perspective(1000px) rotateY(0deg)';}
                document.querySelector('.back').style.display = "flex";

            document.querySelector('.cvv-input').onmouseleave = () =>{
                document.querySelector('.front').style.transform = 'perspective(1000px) rotateY(0deg)';
                document.querySelector('.front').style.display = "flex";
                document.querySelector('.back').style.transform = 'perspective(1000px) rotateY(180deg)';
                document.querySelector('.back').style.display = "hidden";
            }



        </script>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
                <script src="https://kit.fontawesome.com/5e315e4af1.js" crossorigin="anonymous"></script>
                <script src="https://code.jquery.com/jquery-3.6.3.js" integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM=" crossorigin="anonymous"></script>
                <script src="/js/homepage.js"></script>
                <script>
                    $.holdReady(true);
                setTimeout(function () {
          
                    // Setting a variable until
                    // document.ready is called
                    const myVar = "GFG";
                    $.holdReady(false);
                }, 2000);
                 $(document).ready(()=> {
                    //Preloader
                    preloaderFadeOutTime = 500;
                    function hidePreloader() {
                    var preloader = $('.cube-wrapper');
                    preloader.fadeOut(preloaderFadeOutTime);
                    }
                    hidePreloader();
                    });
                  </script>
    </body>
</html>