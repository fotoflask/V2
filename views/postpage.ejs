<!DOCTYPE html>
<html>
    <head>
        <title>Post Page</title>
        <meta charset="utf-8">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		<link rel="stylesheet" href="/css/postpage.css">
        <link rel="stylesheet" href="/css/navbar.css">
      <link rel="stylesheet" href="/css/popup.css">
		<meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Livvic:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,900&display=swap" rel="stylesheet">
    </head>
    <body>
        

        <%- include("layout/navbar",{username:log_username,result : result}) %>
      <%- include("layout/uploadpost",{profilename:log_username,profilepic: ""}) %>

        <hr>

        <div class="media-section">
            <div class="post-section">
                    <div class="post">
                        <img class="img-fluid " src="/images/postimages/anther.png">
                    </div>
            </div>
            <div class="vertical-line"></div>
            <div class="post-details">
                <div class="user-details">
                    <div class="user-profile-picture"><a class="profile-link" href="/profilepage.html"><img class="profile-pic-small"src="/images/ProfilePhotos/poojyanth.png"></a></div>
                    <div class="user-name"><a class="profile-link" href="/profilepage.html">Poojyanth Reddy</a></div>
                </div>
                <hr>
                <div class="comments-section">
                    <p>Comments</p>
                </div>
                <hr>
                <div class="post-options row">
                    <div class="col-3 like"
                    onclick="if (this.querySelector('img').src.endsWith('icons8-ok-hand-50.png')) {
                        this.querySelector('img').src = './images/otherassets/icons8-ok-hand-50 (1).png';
                        this.querySelector('p').innerHTML = parseInt(this.querySelector('p').innerHTML)+1;}
                        else {
                            this.querySelector('img').src = './images/otherassets/icons8-ok-hand-50.png';  
                            this.querySelector('p').innerHTML = parseInt(this.querySelector('p').innerHTML)-1;
                        }">
                        <img src="/images/otherassets/icons8-ok-hand-50.png">
                        <p>562</p>
                    </div>
                    <div class="col-3 comment">
                        <img src="/images/otherassets/icons8-comments-50.png"> 
                        <p>70</p>       
                    </div>
                </div>
            </div>

        
        </div>


        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <script src="https://kit.fontawesome.com/5e315e4af1.js" crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.6.3.js" integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM=" crossorigin="anonymous"></script>
        <script src="/js/postpage.js"></script>
        <script src="/js/popup.js"></script>

        <script>
          setTimeout($(document).ready(function() {
            //Preloader
            preloaderFadeOutTime = 1000;
            function hidePreloader() {
            var preloader = $('.cube-wrapper');
            preloader.fadeOut(preloaderFadeOutTime);
            }
            hidePreloader();
            }),10000);
          </script>
    </body>
</html>